
<div class="container mt-5 col-6 offset-3">
  <h1>Add a review</h1>
  <%= simple_form_for([@restaurant, @review]) do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit 'Add a review', class: 'btn btn-primary' %>
  <% end %>

  <%= link_to "home", restaurants_path %>
</div>
