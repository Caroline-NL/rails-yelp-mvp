
<div class="container mt-5">
  <h1><%= @restaurant.name %></h1>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <p><%= @restaurant.category %></p>

  <% @restaurant.reviews.each do |review| %>
    <p><%= review.rating %></p>
    <p><%= review.content %></p>
  <% end %>

  <%= link_to 'Add Review', new_restaurant_review_path(@restaurant.id) %>
  <%= link_to "Back to list", restaurants_path %>
  <br>
  <%= link_to "Edit", edit_restaurant_path(@restaurant), class: 'btn btn-secondary mt-3' %>
  <br>
  <%= link_to "Remove", restaurant_path(@restaurant), method: :delete, class: 'btn btn-danger mt-3'  %>
</div>



